<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceContainer name="page.main.title">
            <block class="PeachCode\SampleProduct\Block\Orders\Info" name="order.info" template="orders/info.phtml"/>
        </referenceContainer>
        <referenceContainer name="content">
                <block class="PeachCode\SampleProduct\Block\Orders\Info" name="order_items" template="orders/items.phtml" cacheable="false">
                </block>
        </referenceContainer>
    </body>
</page>
